<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<nav class="container">
			<nav class="navbar-brand">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a href="/Home/Home" class="navbar-brand">
					<img src="~/Content/Images/webhomes-brain-gear.png" width="17" height="17" />
				</a>
				@Html.ActionLink("AnswerFeed", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</nav>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="nav navbar-nav mr-auto mt-2 mt-lg-0">
					<li class="nav-link active">@Html.ActionLink("Home", "Index", "Home")</li>
					<li class="nav-link active">@Html.ActionLink("About", "About", "Home")</li>
					<li class="nav-link active">@Html.ActionLink("Contact", "Contact", "Home")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
			<form class="form-inline my-2 my-lg-0">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			</form>
		</nav>
	</nav>
	<div class="container body-content">
		<div class="row">
			<div class="col-md-12">
				<img src="~/Content/Images/webhomes-brain-gear.png" class="img-responsive center-block" />
			</div>
		</div>
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - AnswerFeed Application</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
