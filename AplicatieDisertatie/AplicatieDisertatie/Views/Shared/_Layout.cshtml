<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<nav class="navbar navbar-expand-lg nav-fill fixed-top navbar-dark bg-dark">
		<nav class="container-fluid">
			@Html.ActionLink("AnswerFeed", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

			<button class="navbar-toggler" type="button" data-toggle="collapse"
					data-target="#navbarSupportedContent" aria-controls="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })</li>
					<li class="nav-item active">@Html.ActionLink("About", "About", "Home", new { @class = "nav-link" })</li>
					<li class="nav-item active">@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link" })</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Files
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="#">Create File</a>
							<a class="dropdown-item" href="#">View Files</a>
							<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="#">Something else here</a>
						</div>
					</li>
				</ul>

				@Html.Partial("_LoginPartial")
			</div>
		</nav>
	</nav>
	<div class="container body-content">
		<div class="row">
			<div class="col-md-12">
				<img src="~/Content/Images/webhomes-brain-gear.png" class="img-responsive center-block" />
			</div>
		</div>
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - AnswerFeed Application</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
