@using Common.DTO
@model BookingReportDateModel

@using (Html.BeginForm("BookingReports", "BookingReports", FormMethod.Get))
{
    <div class="form-group">
        @Html.LabelFor(model => model.StartDateTimeForReport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="input-group" id="datepicker">
                @Html.EditorFor(model => model.StartDateTimeForReport, new { htmlAttributes = new { @class = "datepicker" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.StartDateTimeForReport, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EndDateTimeForReport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="input-group" id="datepicker">
                @Html.EditorFor(model => model.EndDateTimeForReport, new { htmlAttributes = new { @class = "datepicker" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.EndDateTimeForReport, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("state", new SelectList(ViewBag.States))
            <input type="submit" name="Filter" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstitutionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingDateToString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingHour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.BookingReportModel)
    {
        <tr>
            <td>
                @item.InstitutionName
            </td>
            <td>
                @item.FullName
            </td>
            <td>
                @item.BookingDateToString
            </td>
            <td>
                @item.BookingHour
            </td>
        </tr>
    }

</table>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@section Scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "mm-dd-yy",
            });
        });
    </script>
}
